{
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist/cjs",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "types": [ "node" ]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules/**/*"]
}
